            };

            fb  
            {
                compatible = "ti,am33xx-tilcdc";
                reg = <0x4830e000 0x1000>; 
                interrupt-parent = <&intc>;
                interrupts = <36>;
                ti,hwmods = "lcdc";
            /*    ti,power-gpio = <&gpio1 2 0x0>; */
                ti,allow-non-reduced-blanking-modes;
