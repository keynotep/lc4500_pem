                        hsync-active    = <1>;
                        vsync-active    = <0>;
                        bpp             = <32>;
                    };

                    timing01: 912x1140@95 
                    {
                        hactive         = <912>;
                        vactive         = <1140>;
                        hfront-porch    = <48>;
                        hsync-len       = <32>;
                        hback-porch     = <80>;
                        vfront-porch    = <3>;
                        vsync-len       = <10>;
                        vback-porch     = <40>;
                        clock-frequency = <121250000>;
                        hsync-active    = <1>;
                        vsync-active    = <0>;
                        bpp             = <32>;
                    };

                    timing02: 912x1140@70 
                    {
                        hactive         = <912>;
                        vactive         = <1140>;
                        hfront-porch    = <48>;
                        hsync-len       = <32>;
                        hback-porch     = <80>;
                        vfront-porch    = <3>;
                        vsync-len       = <10>;
